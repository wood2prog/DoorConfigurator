{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": ["discover", "-s", "tests", "-p", "test_*.py"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Run Current File (from root)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
